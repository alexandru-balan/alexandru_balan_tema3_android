<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/s_margin"
    android:elevation="@dimen/xs_margin"
    android:background="@drawable/ef_ripple"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="@dimen/s_margin">

    <TextView
        android:id="@+id/user_fullName"
        style="@style/HeadlineText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <TextView
        android:id="@+id/user_username"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xs_margin"
        app:layout_constraintEnd_toStartOf="@+id/user_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_fullName">

    </TextView>

    <TextView
        android:id="@+id/user_email"
        style="@style/MutedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xs_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_username"
        app:layout_constraintTop_toBottomOf="@+id/user_fullName" />

</androidx.constraintlayout.widget.ConstraintLayout>