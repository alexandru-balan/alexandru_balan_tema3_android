<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeadlineText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/headlineText</item>
        <item name="android:fontFamily">@font/cantarell_bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:fontFamily">@font/cantarell</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MutedText">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:fontFamily">@font/cantarell</item>
        <item name="android:textColor">@color/colorTextMuted</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
